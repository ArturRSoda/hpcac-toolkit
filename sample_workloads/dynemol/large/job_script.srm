#!/bin/bash
#SBATCH --nodes=22
#SBATCH --ntasks-per-node=1
#SBATCH --ntasks=22
#SBATCH --cpus-per-task=24
#SBATCH -p cpu
#SBATCH -J DSSC2B-Local
#SBATCH --time=96:00:00 

module load intel-oneapi/2022

export DYNEMOLWORKDIR=$(pwd)
export DYNEMOLDIR=/scratch/dynemol_ufsc/luis.rego/MPI

export OMP_NUM_THREADS=$SLURM_CPUS_PER_TASK

export I_MPI_PMI_LIBRARY=/usr/lib64/libpmi.so

source /scratch/app/modulos/intel-psxe-2016.sh > /dev/null

srun $DYNEMOLDIR/dynemol
